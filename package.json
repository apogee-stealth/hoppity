{
    "name": "hoppity-monorepo",
    "version": "0.0.0",
    "private": true,
    "workspaces": [
        "packages/*",
        "examples/*"
    ],
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev",
        "lint": "turbo run lint",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "format:check": "prettier --check \"**/*.{ts,tsx,md}\"",
        "test": "turbo run test",
        "test:integration": "pnpm --filter @apogeelabs/integration-tests test:integration",
        "changeset": "changeset",
        "version-packages": "changeset version",
        "release": "turbo run build && changeset publish",
        "prepare": "husky"
    },
    "lint-staged": {
        "*.{ts,tsx,js,jsx,mjs,css,md}": "prettier --write",
        "*.json": "prettier --write"
    },
    "devDependencies": {
        "@changesets/cli": "^2.26.2",
        "@eslint/js": "^9.22.0",
        "@types/jest": "^29.5.5",
        "@types/node": "^20.8.0",
        "@typescript-eslint/eslint-plugin": "^8.26.1",
        "@typescript-eslint/parser": "^8.26.1",
        "eslint-config-prettier": "^9.0.0",
        "husky": "^9",
        "jest": "^29.7.0",
        "lint-staged": "^16",
        "prettier": "^3.0.3",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "tsup": "^7.2.0",
        "turbo": "^1.10.14",
        "typescript": "^5.2.2"
    },
    "engines": {
        "node": ">=22"
    },
    "packageManager": "pnpm@9.15.9",
    "dependencies": {
        "@apogeelabs/the-agency": "0.3.0",
        "fast-deep-equal": "^3.1.3"
    }
}
