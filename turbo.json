{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["**/.env.*local"],
    "pipeline": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**"]
        },
        "test": {
            "dependsOn": ["build"]
        },
        "lint": {},
        "test:integration": {
            "dependsOn": ["build"],
            "cache": false
        },
        "dev": {
            "cache": false,
            "persistent": true
        }
    }
}
