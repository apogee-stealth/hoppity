{
    "name": "hoppity-rpc-example",
    "version": "1.0.0",
    "description": "Example application demonstrating hoppity with two services",
    "private": true,
    "scripts": {
        "build": "tsc",
        "start:rpc-initiator-svc": "tsx src/rpc-initiator-svc/index.ts",
        "start:rpc-handler-svc": "tsx src/rpc-handler-svc/index.ts",
        "dev": "concurrently \"pnpm start:rpc-initiator-svc\" \"pnpm start:rpc-handler-svc\"",
        "dev:rpc-initiator-svc": "tsx watch src/rpc-initiator-svc/index.ts",
        "dev:rpc-handler-svc": "tsx watch src/rpc-handler-svc/index.ts",
        "dev:both": "concurrently \"pnpm dev:rpc-initiator-svc\" \"pnpm dev:rpc-handler-svc\"",
        "clean": "rm -rf dist",
        "lint": "eslint --config ../../.eslintrc.js 'src/**/*.{ts,tsx}'"
    },
    "dependencies": {
        "@apogeelabs/hoppity": "file:../../packages/hoppity",
        "@apogeelabs/hoppity-rpc": "file:../../packages/hoppity-rpc",
        "@apogeelabs/hoppity-subscriptions": "file:../../packages/hoppity-subscriptions",
        "@apogeelabs/hoppity-logger": "file:../../packages/hoppity-logger",
        "rascal": "^15.0.0",
        "dotenv": "^16.3.1"
    },
    "devDependencies": {
        "@types/node": "^20.8.0",
        "@types/rascal": "^10.2.1",
        "concurrently": "^8.2.2",
        "eslint": "^8.0.1",
        "tsx": "^4.6.0",
        "typescript": "^5.2.2"
    },
    "engines": {
        "node": ">=22"
    }
}
